    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#eb6100"
        android:gravity="center"
        android:padding="10dp"
        android:text="方式一"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btn2"
